/ {
  behaviors {
    u_mt: u_mt {
      compatible = "zmk,behavior-hold-tap";
      #binding-cells = <2>;
      tapping-term-ms = <U_TAPPING_TERM>;
      flavor = "tap-preferred";
      bindings = <&kp>, <&kp>;
    };
    u_lt: u_lt {
      compatible = "zmk,behavior-hold-tap";
      #binding-cells = <2>;
      tapping-term-ms = <U_TAPPING_TERM>;
      flavor = "tap-preferred";
      bindings = <&mo>, <&kp>;
    };
    u_as: u_as {
        compatible = "zmk,behavior-hold-tap";
        label = "u_as";
        #binding-cells = <2>;
        tapping_term_ms = <U_TAPPING_TERM>;
        flavor = "tap-preferred";
        quick-tap-ms = <0>;
        bindings = <&kp>, <&kp>;
    };
  };
};
